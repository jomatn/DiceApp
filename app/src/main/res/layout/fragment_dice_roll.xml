<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.diceapp.GameViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DiceRollFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/dice_animation"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:lottie_rawRes="@raw/dice_roll"
                app:lottie_loop="false"
                app:lottie_autoPlay="false" />

            <Button
                android:id="@+id/high_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High" />

            <Button
                android:id="@+id/medium_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium" />

            <Button
                android:id="@+id/low_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low" />

            <TextView
                android:id="@+id/player_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Score: 0"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bot_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bot Score: 0"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/round_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Round: 1"
                android:textSize="18sp" />
        </LinearLayout>

    </FrameLayout>
</layout>
